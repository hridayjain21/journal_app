<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp">
    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="end"
    android:alpha="0.8"
    android:background="@color/end_color"
    android:elevation="10dp"
    android:orientation="horizontal">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="start"
        android:textSize="17sp"
        android:layout_weight="1"
        android:padding="3dp"
        android:text="Gina"
        android:id="@+id/journal_row_username"/>

    <ImageButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/journal_row_share_button"
        android:src="@android:drawable/ic_menu_share"/>

</LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/journal_image_list"
        android:src="@drawable/background_secnic2"
        android:scaleType="fitXY"
        android:cropToPadding="true"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:padding="10dp"
        android:text="@string/title1"
        android:id="@+id/journal_title_list"
        android:textStyle="bold"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:padding="10dp"
        android:text="@string/thoughts1"
        android:id="@+id/journal_thought_list"
        android:textStyle="normal"
        android:paddingEnd="15dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:text="Date created"
        android:layout_marginStart="10dp"
        android:id="@+id/journal_timestamp_list"
        android:textStyle="italic"/>

</LinearLayout>

</androidx.cardview.widget.CardView>